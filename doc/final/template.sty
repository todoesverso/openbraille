% detalles de encabezados:

% ancho de encabezado
\setlength{\textwidth}{15.5cm}
\setlength{\headwidth}{\textwidth}


\pagestyle{fancy}

% pone el nombre de los capitulos en el encabezado sin punto al final, y en minusculas.
\renewcommand{\chaptermark}[1]{
   \markboth{\chaptername\ \thechapter\ \ #1}{}
}

% idem para secciones
\renewcommand{\sectionmark}[1]{
  \markright{\thesection\ \ #1}}

% contenido de encabezados
\fancyhead{}
\fancyhead[LE,RO]{\rm \bf \thepage}  % numero de pagina
\fancyhead[RE]{\sl \leftmark}        % el nombre del capitulo
\fancyhead[LO]{\sl \rightmark}       % el nombre de la seccion
\fancyfoot{}                         % nada en el pie de pagina

% el grosor de la linea decorativa
\renewcommand{\headrulewidth}{0.3pt}

% la linea decorativa un poco mas abajo.
\renewcommand{\headrule}{
   \vspace*{-0.25cm} \vbox to 0pt{\hbox to\headwidth{\hrulefill}}
}

% redefine cleardoublepage para que las paginas pares vacias al final de 
% cada capitulo queden realmente vacias:
\makeatletter
\def\cleardoublepage{
   \clearpage\if@twoside
   \ifodd\c@page\else \hbox{}
   \vspace*{\fill}
   \vspace{\fill}
   \thispagestyle{empty}
   \newpage \if@twocolumn\hbox{}\newpage\fi\fi\fi
}
\makeatother



