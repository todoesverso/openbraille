% redefine cleardoublepage para que las paginas pares vacias al final de 
% cada capitulo queden realmente vacias:
\makeatletter
\def\cleardoublepage{
   \clearpage\if@twoside
   \ifodd\c@page\else \hbox{}
   \vspace*{\fill}
   \vspace{\fill}
   \thispagestyle{empty}
   \newpage \if@twocolumn\hbox{}\newpage\fi\fi\fi
}
\makeatother


